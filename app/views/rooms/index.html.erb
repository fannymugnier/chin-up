<div id="page-container">
  <div id="content-wrap">
    <div class="container">
      <div class="searchbar" id="search-index">
        <%= form_tag rooms_path, method: :get do %>
          <div class="d-flex align-items-center">
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Rechercher un sujet...",
                autocomplete: 'off'
            %>
            <button type="submit" class="btn search-btn">
              <i class='fas fa-search'></i>
            </button>
          </div>
        <% end %>
      </div>
      <%= link_to "< Retourner a l'accueil", root_path, class: 'back-link' %>
      <p class="mt-3 mb-0"><%= @rooms.length %> <%= "room".pluralize(@rooms.length) %> <%= "correspond".pluralize(@rooms.length) %> à votre recherche</p>
      <div class="card-container">
        <% @rooms.each do |room| %>
          <%= render 'shared/room_card', room: room %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <div class="footer-links">
    © Copyright 2021
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Chin-up ! <i class="fas fa-heart"></i>
  </div>
</div>